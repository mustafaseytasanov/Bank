<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_token_table" author="must99">
        <createTable tableName="token_table">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_token_table"/>
            </column>
            <column name="access_token" type="VARCHAR(255)"/>
            <column name="refresh_token" type="VARCHAR(255)"/>
            <column name="is_logged_out" type="BOOLEAN"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="create_foreign_key" author="must99">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="token_table"
                                 constraintName="FK_TOKEN_TABLE_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users_table"/>
    </changeSet>

</databaseChangeLog>